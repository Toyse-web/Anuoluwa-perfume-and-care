<%- include("../partials/header") %>

<body class="auth-page">
    <div class="auth-bg">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
    
<div class="auth-container">
    <div class="auth-card">
       <h2>Welcome Back</h2>
        <% if (success) { %>
            <p class="alert alert-message"><%= success %></p>
        <% } %>

        <% if (error) { %>
            <div class="alert alert-error"><%= error %></div>
        <% } %>

        <form action="/login" method="POST" class="auth-form" id="loginForm">
            <div class="input-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required placeholder="Enter your email">
            </div>

            <div class="input-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required placeholder="Enter your password">
                <button type="button" class="toggle-password" id="togglePassword" aria-label="Show password">
            <!-- Eye visibility -->
          <svg class="eye-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>

          <!-- Hidden -->
          <svg class="eye-slash" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
            <line x1="1" y1="1" x2="23" y2="23"></line>
          </svg>
          </button>
            </div>

            <button type="submit" class="btn-auth" id="loginBtn">
                <span class="btn-text">Login</span>
                <span class="spinner hide"></span>
            </button>
        </form>

        <p class="auth-footer">
            Don't have an account? <a href="/register">Sign Up</a>
        </p>
    </div>
</div>

<script>
    // Auto-hide alerts after few seconds
    setTimeout(() => {
        document.querySelectorAll(".alert").forEach(a => a.style.display = "none")
    }, 4000);
</script>
</body>

<%- include("../partials/footer") %>