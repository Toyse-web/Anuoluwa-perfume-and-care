<%- include("partials/header") %>

<div class="container">
  <h2>Your Cart</h2>
  <hr class="category-line">

  <% if (cart.length > 0) { 
       let subtotal = 0;
  %>
  <div class="cart-container">
    <table class="cart-table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <%   // ensure numeric
             const price = Number(item.price) || 0;
             const qty = Number(item.quantity) || 0;
             const itemTotal = price * qty;
             subtotal += itemTotal;
        %>
          <tr>
            <td style="text-align:left;">
              <% if (item.image_base64) { %>
                <img src="data:<%= item.image_mimetype %>;base64,<%= item.image_base64 %>" alt="<%= item.name %>">
              <% } else if (item.image_url) { %>
                 <img src="<%= item.image_url %>" alt="<%= item.name %>">
              <% } else { %>
                <img src="/images/placeholder.jpg" alt="No image available">
              <% } %>
              <span><%= item.name %></span>
            </td>
            <td>₦<%= price.toFixed(2) %></td>
            <td>
              <form action="/cart/update/<%= item.id %>" method="POST" class="cart-update-form">
                <input type="number" name="quantity" value="<%= qty %>" min="1" class="qty-input">
                <button type="submit" class="btn update-btn">Update</button>
              </form>
            </td>
            <td>₦<%= itemTotal.toFixed(2) %></td>
            <td>
              <form action="/cart/remove/<%= item.id %>" method="POST">
                <button type="submit" class="btn">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

    <div class="cart-summary" style="text-align:right;margin-top:1rem;">
      <h3>Subtotal: ₦<%= subtotal.toFixed(2) %></h3>
    </div>

    <div class="cart-actions" style="display:flex;justify-content:flex-end;margin-top:1rem;">
      <form action="/cart/clear" method="POST" style="margin-right:1rem;">
        <button type="submit" class="btn">Clear Cart</button>
      </form>
      <form action="/checkout" method="GET">
        <button type="submit" class="btn">Proceed to Checkout</button>
      </form>
    </div>

  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
</div>

<%- include("partials/footer") %>
