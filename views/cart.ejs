<%- include("partials/header") %>

<div class="container">
  <h2>Your Cart</h2>
  <hr class="category-line">

  <% if (cart.length > 0) { 
       let subtotal = 0;
  %>
    <table class="cart-table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <%   // ensure numeric
             const price = Number(item.price) || 0;
             const qty = Number(item.quantity) || 0;
             const itemTotal = price * qty;
             subtotal += itemTotal;
        %>
          <tr>
            <td style="text-align:left;">
              <img src="/images/<%= item.image_url %>" alt="<%= item.name %>" style="width:60px;height:60px;object-fit:cover;border-radius:6px;margin-right:8px;vertical-align:middle;">
              <span><%= item.name %></span>
            </td>
            <td>₦<%= price.toFixed(2) %></td>
            <td>
              <form action="/cart/update/<%= item.id %>" method="POST" style="display:inline-block;">
                <input type="number" name="quantity" value="<%= qty %>" min="1" style="width:72px;padding:6px;border-radius:6px;border:1px solid #ddd;">
                <button type="submit" class="btn" style="margin-left:6px">Update</button>
              </form>
            </td>
            <td>₦<%= itemTotal.toFixed(2) %></td>
            <td>
              <form action="/cart/remove/<%= item.id %>" method="POST">
                <button type="submit" class="btn">Remove</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="cart-summary" style="text-align:right;margin-top:1rem;">
      <h3>Subtotal: ₦<%= subtotal.toFixed(2) %></h3>
    </div>

    <div class="cart-actions" style="display:flex;justify-content:flex-end;margin-top:1rem;">
      <form action="/cart/clear" method="POST" style="margin-right:1rem;">
        <button type="submit" class="btn">Clear Cart</button>
      </form>
      <form action="/checkout" method="GET">
        <button type="submit" class="btn">Proceed to Checkout</button>
      </form>
    </div>

  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
</div>

<%- include("partials/footer") %>
