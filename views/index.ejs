<%- include("partials/header") %>

<div class="container">
  <% categories.forEach(cat => { %>
    <section class="category-block">
      <h2><%= cat.name %></h2>
      <hr class="category-line">

      <div class="product-grid">
        <% if (productsByCategory[cat.id]) { %>
          <% productsByCategory[cat.id].forEach(p => { %>
            <article class="product-card">
              <div class="product-image">
  <% if (p.image_base64) { %>
    <!-- For admin-uploaded images with base64 storage -->
    <img src="data:<%= p.image_mimetype %>;base64,<%= p.image_base64 %>" alt="<%= p.name %>">
  <% } else if (p.image_url) { %>
    <!-- For ALL URL-based images - handle both cases -->
    <img src="<%= p.image_url.startsWith('/') ? p.image_url : '/images/' + p.image_url %>" 
         alt="<%= p.name %>"
         onerror="this.src='/images/placeholder.jpg'">
  <% } else { %>
    <img src="/images/placeholder.jpg" alt="No image available">
  <% } %>
</div>
              <div class="product-info">
                <h3><%= p.name %></h3>
                <p class="excerpt"><%= p.description %></p>
                <div class="price">â‚¦<%= p.price %></div>

                <!-- Add to Cart form -->
                <form action="/cart/add/<%= p.id %>" method="POST">
                  <button type="submit" class="btn add-to-cart-btn">Add to Cart</button>
                </form>
              </div>
            </article>
          <% }) %>
        <% } else { %>
          <p class="muted">No products yet in this category.</p>
        <% } %>
      </div>
    </section>
  <% }) %>
</div>

<%- include("partials/footer") %>
